<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.nadim.countryfacts.Knowledge_test">





    <ImageView
        android:id="@+id/imageView_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_blue_dark"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <Button
        android:id="@+id/button_quiz_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_main"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="102dp"
        android:layout_toStartOf="@+id/imageView_main"
        android:text="Quiz One" />

    <Button
        android:id="@+id/button_quiz_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_quiz_1"
        android:background="@android:color/holo_blue_dark"
        android:layout_centerVertical="true"
        android:text="Quiz two" />

</RelativeLayout>
