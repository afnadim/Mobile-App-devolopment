<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="com.example.nadim.countryfacts.Main_Page">


    <ImageView
        android:id="@+id/imageView_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_blue_dark"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <Button
        android:id="@+id/button_country_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_main"
        android:background="@android:color/holo_blue_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Country Information" />

    <Button
        android:id="@+id/button_test_knowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_country_information"
        android:layout_below="@+id/button_country_information"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="31dp"
        android:text="Test Your Knowledge" />

    <Button
        android:id="@+id/button_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_country_information"
        android:layout_alignStart="@+id/button_test_knowledge"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/button_test_knowledge"
        android:layout_marginTop="36dp"
        android:text="Notes" />


</RelativeLayout>
