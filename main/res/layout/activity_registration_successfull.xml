<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.nadim.countryfacts.Registration_successfull">


    <ImageView
        android:id="@+id/imageView_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_blue_dark"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <EditText
        android:id="@+id/editText_reg_successfull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_main"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="78dp"
        android:layout_toStartOf="@+id/imageView_main"
        android:background="@android:color/holo_blue_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Registration Successfull" />

    <Button
        android:id="@+id/button_login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_reg_successfull"
        android:layout_below="@+id/editText_reg_successfull"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginStart="61dp"
        android:layout_marginTop="64dp"
        android:text="Login" />

</RelativeLayout>
