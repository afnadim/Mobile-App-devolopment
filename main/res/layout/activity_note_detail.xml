<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.nadim.countryfacts.NoteDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Note Title"
        android:id="@+id/textView_note_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Note One"
        android:id="@+id/textView_note_one"
        android:layout_below="@+id/textView_note_title"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@android:color/holo_blue_dark"
        android:text="Note Two"
        android:id="@+id/textView_note_two"
        android:layout_below="@+id/textView_note_one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/NoteTitle"
        android:layout_above="@+id/textView_note_one"
        android:layout_toRightOf="@+id/textView_note_title"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/NoteOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_note_two"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignEnd="@+id/NoteTitle"
        android:layout_alignRight="@+id/NoteTitle"
        android:layout_toRightOf="@+id/textView_note_title"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/NoteTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_note_two"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignEnd="@+id/NoteOne"
        android:layout_alignLeft="@+id/NoteOne"
        android:layout_alignRight="@+id/NoteOne"
        android:layout_alignStart="@+id/NoteOne"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_dark"
        android:layout_toLeftOf="@+id/btnClose" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/btnClose"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_alignTop="@+id/btnSave"
        android:layout_toLeftOf="@+id/btnSave" />

</RelativeLayout>